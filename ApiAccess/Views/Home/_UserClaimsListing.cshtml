@model HelseId.Samples.ApiAccess.ViewModels.ApiResponseViewModel

<div class="col-md">
    <div class="card mt-3">
        <div class="card-body">

            <h5 class="card-title">Claims from the ID token, and the User Info Endpoint</h5>
            <p class="card-text">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Claim type</th>
                        <th scope="col">Claim value</th>
                    </tr>
                    </thead>
                    @foreach (var claim in User.Claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </table>
            </p>
        </div>
    </div>
</div>
